@{
  Layout = "_Layout";
}

@using OrderTracker.Models;

<h3>All current orders for @Model["vendor"].Name:</h3>
<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add new order</a></p>
<p><a href='/vendors'>Return to vendors</a></p>
<p><a href='/'>Back Home</a></p>